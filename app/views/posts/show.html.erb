<h3>スケジュール編集</h3>
 
   <table>
     <tr>
       <th>タイトル</th>
       <td><%= @post.title %></td>
     </tr>
     <tr>
       <th>開始日</th>
       <td><%= @post.starting_date.to_s(:yeardate) %></td>
     </tr>
     <tr>
       <th>投稿日</th>
       <td><%= @post.created_at.to_s(:yeardate) %></td>
     </tr>
     <tr>
       <th>終日</th>
       <td><% if @post.is_all_day == true %>
             ○
          <% else @post.is_all_day == false %>

          <% end %></td>
     </tr>
     <tr>
       <th>スケジュールメモ</th>
       <td><%= @post.memo %></td>
     </tr>
   </table>
 
   <div>
     <ul style="list-style: none;">
       <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
       <li><%= link_to "スケジュールを編集する", :edit_post %></li>
       <li><%= link_to "スケジュールを削除", :posts %></li>
     </ul>
   </div>

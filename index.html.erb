<h1>Ruby on Rails スケジュール管理アプリ</h1>

<h3>スケジュール一覧</h3>

<% if flash[:notice]%>
  <p class= "notice"><%= flash[:notice]%></p>
<% end %>

<table>
   <thead>
     <tr>
       <th>ID</th>
       <th>タイトル</th>
       <th>開始日</th>
       <th>終了日</th>
       <th>終日</th>
       <th>スケジュール更新日</th>
       <th>確認</th>
       <th>編集</th>
       <th>削除</th>
     </tr>
   </thead>

   <tbody>
      <% @posts.each do |post| %>
       <tr>
         <td><%= post.id %></td>
         <td><%= post.title %></td>
         <td><%= post.starting_date.to_s(:yeardate) %></td>
         <td><%= post.ending_date.to_s(:yeardate) %></td>
         <td><% if post.is_all_day == true %>
             ○
          <% else post.is_all_day == false %>

          <% end %></td>
         <td><%= post.updated_at.to_s(:datetime_jp) %></td>
         <td><%= link_to "確認", post %></td>
         <td><%= link_to "編集", [:edit,post] %></td>
         <td><%= link_to "削除", post, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
       </tr>
     <% end %>
   </tbody>
 </table>

<p><%= link_to "スケジュール新規登録",:new_post %></p>
